{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacerOptions": {
      "extension": ".js"
    }
  },

  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/**"
  ]
}
